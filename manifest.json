{
    "manifest_version": 3,
    "name": "Privacy Inspector",
    "description": "Visualisez les données collectées par les sites web",
    "version": "1.0",
    "permissions": [
      "activeTab",
      "storage",
      "webRequest"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }]
  }

  