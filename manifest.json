{
    "manifest_version": 3,
    "name": "Mon Empreinte Numérique",
    "version": "1.0",
    "description": "Visualisez les données collectées sur vous",
    "permissions": ["activeTab"],
    "action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "content_security_policy": {
      "extension_pages": "script-src 'self'; object-src 'self'"
    }
  }